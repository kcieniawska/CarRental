{% extends 'base.html.jinja' %}

{% block content %}
<div class="checkout-page">
    <h2 class="checkout-title">Podaj swoje dane</h2>

    <div class="checkout-form-container">
        <form method="POST" action="{% url 'orders:checkout' %}">
            {% csrf_token %}
            
            <!-- Formularz danych osobowych -->
            <div class="form-group">
                <label for="first_name">Imię:</label>
                <input type="text" id="first_name" name="first_name" value="{{ request.session.first_name|default:'' }}" required />
            </div>
            <div class="form-group">
                <label for="last_name">Nazwisko:</label>
                <input type="text" id="last_name" name="last_name" value="{{ request.session.last_name|default:'' }}" required />
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="{{ request.session.email|default:'' }}" required />
            </div>
            <div class="form-group">
                <label for="phone">Telefon:</label>
                <input type="text" id="phone" name="phone" value="{{ request.session.phone|default:'' }}" required />
            </div>
            
            <!-- Formularz adresowy -->
            <div class="form-group">
                <label for="street">Ulica:</label>
                <input type="text" id="street" name="street" value="{{ request.session.street|default:'' }}" />
            </div>
            <div class="form-group">
                <label for="city">Miejscowość:</label>
                <input type="text" id="city" name="city" value="{{ request.session.city|default:'' }}" required />
            </div>
            <div class="form-group">
                <label for="postal_code">Kod pocztowy:</label>
                <input type="text" id="postal_code" name="postal_code" value="{{ request.session.postal_code|default:'' }}" required />
            </div>
            <div class="form-group">
                <label for="house_number">Numer domu/mieszkania:</label>
                <input type="text" id="house_number" name="house_number" value="{{ request.session.house_number|default:'' }}" required />
            </div>

            <div class="checkout-buttons">
                <button type="submit" class="pay-now-btn">Przejdź do podsumowania</button>
                <a href="{% url 'orders:cart' %}" class="back-to-cart-button">Wróć do koszyka</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
