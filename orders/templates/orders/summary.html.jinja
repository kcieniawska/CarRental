{% extends 'base.html.jinja' %}

{% block content %}
<div class="order-summary">
    <h2>Podsumowanie zamówienia</h2>

    <p><strong>Imię:</strong> {{ order.first_name }}</p>
    <p><strong>Nazwisko:</strong> {{ order.last_name }}</p>
    <p><strong>Email:</strong> {{ order.email }}</p>
    <p><strong>Telefon:</strong> {{ order.phone }}</p>
    <p><strong>Adres:</strong> {{ order.street }}, {{ order.city }}, {{ order.postal_code }} {{ order.house_number }}</p>

    <h3>Szczegóły zamówienia</h3>
    <ul>
        {% for item in order.orderitem_set.all %}
            <li>{{ item.car.brand }} {{ item.car.model }} - {{ item.rental_days }} dni - {{ item.total_price }} zł</li>
        {% endfor %}
    </ul>

    <p><strong>Całkowita cena:</strong> {{ order.total_price }} zł</p>

    <div class="order-buttons">
        <a href="{% url 'orders:process_payment' order.id %}" class="pay-now-btn">Przejdź do płatności</a>
        <a href="{% url 'orders:cart' %}" class="back-to-cart-btn">Wróć do koszyka</a>
    </div>
</div>
{% endblock %}
