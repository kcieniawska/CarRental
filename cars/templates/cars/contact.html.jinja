{% extends "base.html.jinja" %}

{% block title %}Kontakt{% endblock %}

{% block content %}
<section class="contact">
    <div class="content-wrapper">
        <h2>Skontaktuj się z nami</h2>

        <!-- Sekcja formularza -->
        <div class="contact-form">
            <h3>Formularz kontaktowy</h3>
            <form action="#" method="post">
                <div class="form-group">
                    <label for="name">Imię i nazwisko:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="message">Wiadomość:</label>
                    <textarea id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="submit-btn">Wyślij wiadomość</button>
            </form>
        </div>

        <!-- Sekcja danych kontaktowych -->
        <div class="contact-info">
            <h3>Dane kontaktowe</h3>
            <p><strong>Telefon:</strong> +48 123 456 789</p>
            <p><strong>Email:</strong> kontakt@example.com</p>
            <p><strong>Adres:</strong> ul. Przykładowa 123, 00-000 Miasto</p>
        </div>

        <!-- Sekcja mapy -->
        <div class="contact-map">
            <h3>Znajdź nas</h3>
            <iframe src="https://www.google.com/maps/embed?pb=..." width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</section>
{% endblock %}
