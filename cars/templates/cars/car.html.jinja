    {% endif %}

    {% for review in reviews %}
    <div class="review-item">
        <p>
            <strong>{{ review.user.username }}</strong> ({{ review.created_at|date:"d M Y, H:i" }})
            <span class="review-stars-inline">
                {% for i in "12345" %}
