            <br><h3 class="pending-reviews-title">Opinie oczekujƒÖce na zatwierdzenie:</h3>
            <ul class="pending-reviews-list"><br>
                {% for pending_review in pending_reviews %}
                    <li class="pending-review-item"><strong>{{ pending_review.user.username }}</strong> ({{ pending_review.created_at|date:"d M Y, H:i" }}) - Oczekuje na zatwierdzenie</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Brak opinii oczekujƒÖcych na zatwierdzenie.</p>
        {% endif %}
    {% endif %}

    {% if user_reviews is not None %}
        <br>
        <ul class="user-reviews-list"> 
            {% for review in user_reviews %}
            
                {% if not review.is_approved %}
                <h3 class="user-reviews-title">Twoje opinie:</h3><br>
                    <li class="user-review-item"><strong>{{ review.created_at|date:"d M Y, H:i" }}:</strong> {{ review.content }} 
                        - <span class="pending-approval">Oczekuje na zatwierdzenie</span>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    {% else %}
        <p>Nie doda≈Çe≈õ jeszcze ≈ºadnej opinii.</p>
    {% endif %}
</div>
<style>
    #toast-container {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10000;
        display: flex;
        flex-direction: column;
        gap: 12px;
        width: 90%;
        max-width: 400px;
        pointer-events: none;
    }
    
    .toast {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 16px 20px;
        border-radius: 12px;
        font-weight: 500;
        font-size: 15px;
        line-height: 1.4;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        color: white;
        animation: fadeOutToast 5s ease-out forwards;
        opacity: 0.95;
        pointer-events: auto;
        position: relative;
    }
    
    .toast::before {
        font-size: 18px;
        line-height: 1;
    }
    
    .toast.success {
        background: linear-gradient(135deg, #28a745, #218838);
    }
    
    .toast.error {
        background: linear-gradient(135deg, #dc3545, #c82333);
    }
    
    .toast.warning {
        background: linear-gradient(135deg, #ffc107, #e0a800);
        color: black;
    }
    
    .toast.info {
        background: linear-gradient(135deg, #17a2b8, #138496);
    }
    
    @keyframes fadeOutToast {
        0% { opacity: 1; transform: translateY(0); }
        90% { opacity: 1; }
        100% { opacity: 0; transform: translateY(-20px); }
    }
    .toast-close {
        background: none;
        border: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        position: absolute;
        top: 8px;
        right: 12px;
        cursor: pointer;
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }
    
    .toast-close:hover {
        opacity: 1;
    }
    
</style>

<script>
    // Lista ≈õwiƒÖt w formacie YYYY-MM-DD
    const holidays = [
        "2025-01-01", "2025-04-20", "2025-04-21", "2025-05-01", "2025-05-03",
        "2025-05-29", "2025-08-15", "2025-11-01", "2025-11-11", "2025-12-25", "2025-12-26"
    ];

    function isHolidayOrSunday(dateStr) {
        const date = new Date(dateStr);
        const day = date.getDay(); // 0 = niedziela
        return day === 0 || holidays.includes(dateStr);
    }

    document.getElementById('rental-form').addEventListener('submit', function(event) {
        const startInput = document.getElementById('start_date');
        const endInput = document.getElementById('end_date');
        const start = startInput.value;
        const end = endInput.value;

        const startError = document.getElementById('start_date_error');
        const endError = document.getElementById('end_date_error');
        startError.textContent = '';
        endError.textContent = '';

        let hasError = false;

        if (isHolidayOrSunday(start)) {
            startError.textContent = "Wypo≈ºyczalnia nieczynna w niedziele i ≈õwiƒôta!";
            hasError = true;
        }

        if (isHolidayOrSunday(end)) {
            endError.textContent = "Wypo≈ºyczalnia nieczynna w niedziele i ≈õwiƒôta!";
            hasError = true;
        }

        if (hasError) {
            event.preventDefault(); // Zatrzymaj wysy≈Çkƒô
        }
    });
    window.addEventListener('DOMContentLoaded', () => {
        const msg = document.getElementById('messages');
        if (msg) {
            msg.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    });
    // Usuwanie komunikatu po zako≈Ñczeniu animacji
    document.addEventListener('DOMContentLoaded', function () {
        const toasts = document.querySelectorAll('.toast');
        toasts.forEach(toast => {
            toast.addEventListener('animationend', () => toast.remove());
        });
    });
</script>
{% endblock %}