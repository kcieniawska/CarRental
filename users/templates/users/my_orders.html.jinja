{% extends 'base.html.jinja' %}

{% block content %}
    <h2>Twoje zamówienia</h2>

    {% if orders %}
    <ul>
        {% for order in orders %}
            <li>Order ID: {{ order.id }} - Car: {{ order.car }} - Status: {{ order.get_status_display() }}</li> <!-- Dodano nawiasy -->
        {% endfor %}
    </ul>
    {% else %}
        <p>Brak zamówień</p>
    {% endif %}
{% endblock %}
