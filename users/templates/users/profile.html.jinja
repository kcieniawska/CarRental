{% extends 'base.html.jinja' %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2>Twój profil</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Kolumna z obrazkiem profilowym -->
                        <div class="col-md-4 text-center">
                            {% if user.profile.profile_picture %}
                                <img src="{{ user.profile.profile_picture.url }}" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 150px;">
                            {% else %}
                                <img src="https://via.placeholder.com/150" alt="Profile Picture" class="img-fluid rounded-circle">
                            {% endif %}
                        </div>

                        <!-- Kolumna z danymi użytkownika -->
                        <div class="col-md-8">
                            <p><strong>Użytkownik:</strong> {{ user.username }}</p><br>
                            <p><strong>Imię: </strong>{{ user.first_name }}<br> <strong>Nazwisko: </strong> {{ user.last_name }}</p>
                            <p><strong>Email:</strong> {{ user.email }}</p>
                            <p><strong>Data rejestracji:</strong> {{ user.date_joined|date:"d M Y" }}</p>

                            <!-- Link do edytowania profilu -->
                            <a href="{% url 'edit_profile' %}" class="btn btn-warning mt-3">Edytuj profil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Zakładka Moje zamówienia -->
        <div class="col-md-8 mt-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h2>Moje zamówienia</h2>
                </div>
                <div class="card-body">
                    {% if user.orders.all %}
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Samochód</th>
                                    <th scope="col">Liczba dni</th>
                                    <th scope="col">Całkowita cena</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Data zamówienia</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in user.orders.all %}
                                <tr>
                                    <td>{{ order.car }}</td>
                                    <td>{{ order.rental_days }}</td>
                                    <td>{{ order.total_price }} PLN</td>
                                    <td>{{ order.get_status_display }}</td>
                                    <td>{{ order.rental_date|date:"d M Y" }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Nie masz żadnych zamówień.</p>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
